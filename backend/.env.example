# Backend Environment Variables
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=True
ENVIRONMENT=development

# OpenAI / LLM Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=constitutional-ai

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/constitutional_ai

# Redis Cache
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Security
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string

# Feature Flags
ENABLE_DEVIL_ADVOCATE=true
ENABLE_MEMORANDUM_GENERATOR=true
ENABLE_CITATION_VERIFICATION=true

# Monitoring (Optional)
SENTRY_DSN=
